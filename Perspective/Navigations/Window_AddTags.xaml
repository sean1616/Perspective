<Window
    x:Class="Perspective.Navigations.Window_AddTags"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Perspective.Navigations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Window_AddTags"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="1" Stretch="Fill">
            <TextBox
                x:Name="txt_newTagName"
                Width="792"
                Height="83.8"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#FFDADADA"
                PreviewKeyDown="Txt_newTagName_PreviewKeyDown" />
        </Viewbox>
        <Button
            x:Name="btn_addTag"
            Grid.Row="3"
            Click="Btn_addTag_Click"
            Content="Add"
            Style="{DynamicResource BtnStyle_TagBox}" />
    </Grid>
</Window>
