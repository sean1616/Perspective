<Window
    x:Class="Perspective.Navigations.Window_AddTags"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Perspective.Navigations"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add Tags"
    WindowStartupLocation="CenterOwner"
    Width="400"
    Height="280"    
    FontFamily="Segoe Print"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBox
            x:Name="txt_newTagName"
            Grid.Row="1"
            FontFamily="Segoe Print"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="#FFF1F0F0"
            FontSize="22"
            PreviewKeyDown="Txt_newTagName_PreviewKeyDown" />
        <Button
            x:Name="btn_addTag"
            Grid.Row="3"
            Click="Btn_addTag_Click"
            Content="Add"
            Style="{DynamicResource BtnStyle_TxtCenter}" />
    </Grid>
</Window>
