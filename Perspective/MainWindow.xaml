        </Grid>
        <Grid x:Name="grid_msg"
              Grid.Row="4"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.03*"
                                  MinWidth="15" />
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.6*" />
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border x:Name="border_msg"
                    Grid.ColumnSpan="6"
                    Background="#FFA5E2DD" />
            <TextBlock x:Name="txt_msg1"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Segoe Print"
                       Text="{Binding txt_msg1, FallbackValue=MSG}" />
            <TextBlock x:Name="txt_msg2"
                       Grid.Column="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Segoe Print"
                       Text="{Binding txt_msg2}" />
            <TextBlock x:Name="txt_msg3"
                       Grid.Column="3"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Segoe Print"
                       Text="{Binding txt_msg3}" />
            <TextBlock x:Name="txt_msg4"
                       Grid.Column="4"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Segoe Print"
                       Text="{Binding txt_msg4}" />
            <TextBlock x:Name="txt_msg5"
                       Grid.Column="5"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontFamily="Segoe Print"
                       Text="{Binding txt_msg5}" />
        </Grid>

    </Grid>
</Window>
