<Window
    x:Class="Perspective.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Perspective"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Perspective.ViewModels"
    Title="MainWindow"
    Width="1000"
    Height="600"
    Loaded="Window_Loaded"
    mc:Ignorable="d">

    <Window.DataContext>
        <vm:VM />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="9*" />
        </Grid.RowDefinitions>
        <Border
            Grid.ColumnSpan="2"
            Background="#FF59A5D1"
            BorderThickness="1" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button
                x:Name="btn_addTagWindow"
                Click="Btn_addTagWindow_Click"
                Content="Tag" />
            <Button Grid.Row="1" Style="{DynamicResource BtnStyle_FilePicBox}" />
        </Grid>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Background="#FFFBFBFB" Margin="5,0,-5,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="10*" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Viewbox HorizontalAlignment="Left">
                    <TextBox
                        x:Name="txt_path"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        PreviewKeyDown="Txt_path_PreviewKeyDown"
                        Text="D:\SeanWu\DIY" />
                </Viewbox>

                <Button Grid.Column="1" />
                <Button Grid.Column="2" />
            </Grid>

           

            <ItemsControl Grid.Row="1" ItemsSource="{Binding list_tags}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding}" Margin="0,0,5,5" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                
            </ItemsControl>

            <!--<StackPanel
                x:Name="stkpanel_tags"
                Grid.Row="1"
                Margin="2,0,0,0"
                Orientation="Horizontal" />-->

            <StackPanel Grid.Row="2">
                <StackPanel Orientation="Horizontal">
                    <ToggleButton
                        x:Name="btn_1"
                        Width="120"
                        Height="120"
                        Checked="Btn_1_Checked"
                        Content="{Binding list_files[0]}"
                        Style="{DynamicResource TBtn_FileBox}" />
                    <ToggleButton
                        x:Name="btn_2"
                        Width="120"
                        Height="120"
                        Content="{Binding list_files[1]}"
                        Style="{DynamicResource TBtn_FileBox}" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                    <Button Width="120" Height="120" />
                </StackPanel>
            </StackPanel>
            <Border Grid.Row="4" Background="#FFA5E2DD" />
        </Grid>
    </Grid>
</Window>
